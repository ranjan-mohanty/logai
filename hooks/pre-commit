#!/bin/sh
# Pre-commit hook for LogAI
# Install: cp hooks/pre-commit .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found. Please install Rust."
    exit 1
fi

# Format check
echo "ğŸ“ Checking code formatting..."
if ! cargo fmt --all -- --check; then
    echo "âŒ Code formatting issues found. Run 'cargo fmt --all' to fix."
    exit 1
fi

# Clippy check
echo "ğŸ”§ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --all-features; then
    echo "âŒ Tests failed. Please fix them."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
