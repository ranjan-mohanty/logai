#!/bin/sh
# Pre-commit hook for LogAI
# Auto-installed via Makefile

set -e

echo "ğŸ” Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found. Please install Rust."
    exit 1
fi

# Format code automatically
echo "ğŸ“ Formatting code..."
cargo fmt --all
git add -u

# Format markdown files if prettier is available
if command -v prettier &> /dev/null; then
    echo "ğŸ“„ Formatting markdown..."
    prettier --write "*.md" "docs/*.md" 2>/dev/null || true
    git add -u
fi

# Clippy check
echo "ğŸ”§ Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings; then
    echo "âŒ Clippy found issues. Please fix them."
    exit 1
fi

# Run tests
echo "ğŸ§ª Running tests..."
if ! cargo test --all-features; then
    echo "âŒ Tests failed. Please fix them."
    exit 1
fi

echo "âœ… All pre-commit checks passed!"
